

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  uid      Int      @id @default(autoincrement())
  email   String   @unique
  username    String
  role    String
  contactNumber String
  Address String
  password String
  cart  Cart?  
 
}

model Product {
  prodId String @id
  name String
  imageUrl String
  category String
  new_price Int
  old_price Int

  description String
  cartItems  CartItem[]
  sizeItems ProductSizes[]

}

model ProductSizes{
  sizeId Int @id @default(autoincrement())
  sizeName String
  quantity Int
  product Product @relation(fields: [fk_prodId], references: [prodId], onDelete: Cascade)
  fk_prodId String 
  cartItems CartItem[]
}


model Cart {
  cartId       Int        @id @default(autoincrement())
 
  subtotal     Int
  shippingFee  Int
  total        Int
  user        User       @relation(fields: [fk_userId], references: [uid], onDelete: NoAction)
  fk_userId    Int        @unique
  cartItems    CartItem[]
}

model CartItem {
  cartItemId   Int        @id @default(autoincrement())
  itemQuantity     Int
 
  cart         Cart       @relation(fields: [fk_cartId], references: [cartId])
  fk_cartId    Int
  product      Product    @relation(fields: [fk_productId], references: [prodId])
  fk_productId  String
  productSize ProductSizes @relation(fields: [fk_sizeId], references: [sizeId])
  fk_sizeId  Int 
  
}
