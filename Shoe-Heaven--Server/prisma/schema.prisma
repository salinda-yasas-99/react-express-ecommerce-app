

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  uid      Int      @id @default(autoincrement())
  email   String   @unique
  username    String
  role    String
  contactNumber String
  Address String
  password String
  orders Order[]
 
}

model Product {
  prodId String @id
  name String
  imageUrl String
  category String
  new_price Int
  old_price Int

  description String
  sizeItems ProductSizes[]

}

model ProductSizes{
  sizeId Int @id @default(autoincrement())
  sizeName String
  quantity Int
  product Product @relation(fields: [fk_prodId], references: [prodId], onDelete: Cascade)
  fk_prodId String 
  
}

model Order{
  orderId Int  @id @default(autoincrement())
  Total   Int
  orderItems Json
  user User  @relation(fields: [fk_userId], references: [uid], onDelete: NoAction)
  fk_userId Int 
}


